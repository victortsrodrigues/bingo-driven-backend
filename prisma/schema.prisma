generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id       Int      @id @default(autoincrement())
  date     DateTime @default(now())
  finished Boolean  @default(false)
  numbers  Number[]

  @@map("games")
}

model Number {
  id     Int  @id @default(autoincrement())
  value  Int
  game   Game @relation(fields: [gameId], references: [id])
  gameId Int

  @@map("numbers")
}
